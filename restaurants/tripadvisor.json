{
  "recipe_shortcut": "tripadvisor_restaurants",
  "list_type": "restaurants",
  "engine_version": 16,
  "title": "Tripadvisor restaurants",
  "description": "A recipe to get a list of restaurants",
  "urls": [
    "https://www.tripadvisor.es/",
    "https://www.tripadvisor.com/"
  ],
  "headers": {
    "Accept-Language": "en-UK",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "https://www.tripadvisor.com/TypeAheadJson?interleaved=true&link_type=geo&scoreThreshold=0.8&max=6&nearby=true&action=API&types=eat&query=$INPUT",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of tripadvisor"
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].name",
      "input": "$JSON",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "description": "Saves the restaurant."
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].url",
      "input": "$JSON",
      "output": {
        "name": "ID$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "description": "Saves the url."
    },
    {
      "command": "store",
      "input": "https://www.tripadvisor.com$ID$i",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 5
      },
      "description": "Load the url of the restaurant"
    },
    {
      "command": "store_text",
      "locator": "[data-test-target*='restaurant-detail-info'] a[href*='zfp']",
      "output": {
        "name": "ORIENTATIVE_PRICE",
        "show": true
      },
      "description": "Saves the price"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:title']",
      "attribute_name": "content",
      "output": {
        "name": "TITLE",
        "show": true
      },
      "description": "Saves the title from og:title meta tag"
    },
    {
      "command": "regex",
      "input": "$TITLE",
      "expression": "^([^,]+)",
      "output": {
        "name": "TITLE",
        "show": true
      },
      "description": "Extracts just the restaurant name from the title"
    },
    {
      "command": "store_text",
      "locator": "a[href^='tel:']",
      "output": {
        "name": "PHONE",
        "show": true
      },
      "description": "Saves the phone number"
    },
    {
      "command": "store_text",
      "locator": "[data-test-target*='restaurant-detail-info'] [data-automation='bubbleRatingValue']",
      "output": {
        "name": "RATING",
        "show": true
      },
      "description": "Saves the rating"
    },
    {
      "command": "store_text",
      "locator": "[data-test-target*='restaurant-detail-info'] a[href*='-c']:not([href*='zfp'])",
      "output": {
        "name": "STYLE",
        "show": true
      },
      "description": "Saves the cuisine style"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:image']",
      "attribute_name": "content",
      "output": {
        "name": "COVER",
        "show": true
      },
      "description": "Saves the image"
    },
    {
      "command": "store_attribute",
      "locator": "[data-automation='restaurantsWebsiteButton']",
      "attribute_name": "href",
      "output": {
        "name": "WEBSITE",
        "show": true
      },
      "description": "Saves the website"
    },
    {
      "command": "store_text",
      "locator": "[data-automation='OVERVIEW_TAB_ELEMENT'] .fIrGe > div",
      "output": {
        "name": "DESCRIPTION",
        "show": true
      },
      "description": "Saves the restaurant description from About section"
    },
    {
      "command": "url_encode",
      "input": "$TITLE",
      "output": {
        "name": "AUX_TITLE"
      },
      "description": "Url encode of the title"
    },
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "https://www.tripadvisor.com/TypeAheadJson?interleaved=true&link_type=geo&scoreThreshold=0.8&max=6&nearby=true&action=API&types=eat&query=$AUX_TITLE",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of tripadvisor"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].address",
      "input": "$JSON",
      "output": {
        "name": "ADDRESS",
        "show": true
      },
      "description": "Saves the address from API response"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].coords",
      "input": "$JSON",
      "output": {
        "name": "COORDS",
        "show": true
      },
      "description": "Saves the coords."
    }
  ]
}
