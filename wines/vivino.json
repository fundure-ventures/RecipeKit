{
  "recipe_shortcut": "vivino_wines",
  "list_type": "wines",
  "engine_version": 16,
  "title": "Vivino Wines",
  "description": "Retrieve the wines from page vivino",
  "urls": [
    "vivino.com",
    "https://vivino.com",
    "https://www.vivino.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.vivino.com/search/wines?q=$INPUT",
      "description": "Load the url of the wine",
      "config": {
        "js": true,
        "timeout": 100
      }
    },
    {
      "command": "store_attribute",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[role='img']",
      "attribute_name": "style",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "regex",
      "input": "$COVER$i",
      "expression": "(?<=url\\(\"//).+?(?=\"\\)|$)",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://$COVER$i",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store_text",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[class*='wineInfoVintage__wineInfoVintage'] > div[class*='wineInfoVintage__truncate']:first-child",
      "output": {
        "name": "WINERY$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the winery name"
    },
    {
      "command": "store_text",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[class*='wineInfoVintage__vintage']",
      "output": {
        "name": "VINTAGE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the vintage/name"
    },
    {
      "command": "store",
      "input": "$WINERY$i $VINTAGE$i",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Combines winery and vintage for full title"
    },
    {
      "command": "store_text",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[class*='wineInfoLocation__regionAndCountry']",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the region of the wine"
    },
    {
      "command": "store_attribute",
      "locator": "div[data-testid='wineCard']:nth-child($i) a[data-testid='vintagePageLink']",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://www.vivino.com$URL$i",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 4
      },
      "description": "Load the url of the wine"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_text",
      "locator": "title",
      "output": {
        "name": "WINERY",
        "type": "string",
        "show": true
      },
      "description": "Saves the winery of the wine"
    },
    {
      "command": "regex",
      "input": "$WINERY",
      "expression": "[^\\|]*",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Applies a regular expression to get just the title"
    },
    {
      "command": "store",
      "input": "$TITLE",
      "output": {
        "name": "WINERY",
        "type": "string",
        "show": true
      },
      "description": ""
    },
    {
      "command": "store_text",
      "locator": "#vintageListSection a div div:nth-child(1) span",
      "output": {
        "name": "VINTAGE",
        "type": "string",
        "show": true
      },
      "description": "Saves the vintage of the wine"
    },
    {
      "command": "store_text",
      "locator": "[class^=vivinoRating_averageValue]",
      "output": {
        "name": "RATING_TEXT",
        "type": "string",
        "show": false
      },
      "description": "Gets the rating text"
    },
    {
      "command": "replace",
      "input": "$RATING_TEXT",
      "find": ",",
      "replace": ".",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Converts comma to dot for decimal separator"
    },
    {
      "command": "store_text",
      "locator": "[class^=purchaseAvailabilityPPC__amount]",
      "output": {
        "name": "PRICE",
        "type": "float",
        "show": true
      },
      "description": "Get the price"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/grapes/']",
      "output": {
        "name": "GRAPES",
        "type": "string",
        "show": true
      },
      "description": "Field: Type of grape"
    },
    {
      "command": "store_text",
      "locator": "a[data-cy='breadcrumb-winetype']",
      "output": {
        "name": "STYLE",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the style from breadcrumb"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-countries/']",
      "output": {
        "name": "COUNTRY",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-regions/']",
      "output": {
        "name": "PLACE",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store",
      "input": "$COUNTRY, $PLACE",
      "output": {
        "name": "REGION",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the region"
    },
    {
      "command": "store_attribute",
      "locator": "picture img",
      "attribute_name": "src",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the image"
    },
    {
      "command": "store",
      "input": "https:$COVER",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Field: Add url param to the cover"
    },
    {
      "command": "store_text",
      "locator": "[class^=wineFacts__wineFacts] tr:last-child [class^=wineFacts__fact] span",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store",
      "input": "$URL",
      "output": {
        "name": "URL_SALE"
      },
      "description": "Field: Saves the url to sale the product"
    }
  ]
}
