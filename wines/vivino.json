{
  "recipe_shortcut": "vivino_wines",
  "list_type": "wines",
  "engine_version": 16,
  "title": "Vivino Wines",
  "description": "Retrieve the wines from page vivino",
  "urls": [
    "vivino.com",
    "https://vivino.com",
    "https://www.vivino.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.vivino.com/search/wines?q=$INPUT",
      "description": "Load the url of the wine",
      "config": {
        "js": true,
        "timeout": 2
      }
    },
    {
      "command": "store_attribute",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[role='img']",
      "attribute_name": "style",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "regex",
      "input": "$COVER$i",
      "expression": "(?<=url\\(\"//).+?(?=\"\\)|$)",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://$COVER$i",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store_text",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[class*='wineInfoVintage__wineInfoVintage'] > div[class*='wineInfoVintage__truncate']:first-child",
      "output": {
        "name": "WINERY$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the winery name"
    },
    {
      "command": "store_text",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[class*='wineInfoVintage__vintage']",
      "output": {
        "name": "VINTAGE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the vintage/name"
    },
    {
      "command": "store",
      "input": "$WINERY$i $VINTAGE$i",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Combines winery and vintage for full title"
    },
    {
      "command": "store_text",
      "locator": "div[data-testid='wineCard']:nth-child($i) div[class*='wineInfoLocation__regionAndCountry']",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the region of the wine"
    },
    {
      "command": "store_attribute",
      "locator": "div[data-testid='wineCard']:nth-child($i) a[data-testid='vintagePageLink']",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://www.vivino.com$URL$i",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 2
      },
      "description": "Load the url of the wine"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_text",
      "locator": "title",
      "output": {
        "name": "WINERY",
        "type": "string",
        "show": true
      },
      "description": "Saves the winery of the wine"
    },
    {
      "command": "regex",
      "input": "$WINERY",
      "expression": "[^\\|]*",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Applies a regular expression to get just the title"
    },
    {
      "command": "store",
      "input": "$TITLE",
      "output": {
        "name": "WINERY",
        "type": "string",
        "show": true
      },
      "description": ""
    },
    {
      "command": "store_text",
      "locator": "div[class*='wineHeadline-module__vintage']",
      "output": {
        "name": "VINTAGE_TEXT",
        "type": "string",
        "show": false
      },
      "description": "Gets vintage text from main headline"
    },
    {
      "command": "regex",
      "input": "$VINTAGE_TEXT",
      "expression": "(\\d{4})",
      "output": {
        "name": "VINTAGE",
        "type": "string",
        "show": true
      },
      "description": "Extracts only the year (e.g. 2020)"
    },
    {
      "command": "store_text",
      "locator": "[class^=vivinoRating_averageValue]",
      "output": {
        "name": "RATING_RAW"
      },
      "description": "Gets the rating text with comma (e.g. 3,7)"
    },
    {
      "command": "regex",
      "input": "$RATING_RAW",
      "expression": "^([^,]*)",
      "output": {
        "name": "RATING_LEFT"
      },
      "description": "Extracts left part before comma"
    },
    {
      "command": "regex",
      "input": "$RATING_RAW",
      "expression": "(?<=,)(.*)",
      "output": {
        "name": "RATING_RIGHT"
      },
      "description": "Extracts right part after comma"
    },
    {
      "command": "store",
      "input": "$RATING_LEFT.$RATING_RIGHT",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Combines both parts with dot (3.7)"
    },
    {
      "command": "store_text",
      "locator": "span[class*='purchaseAvailability__currentPrice']",
      "output": {
        "name": "PRICE_TEXT",
        "type": "string",
        "show": false
      },
      "description": "Gets the price text (e.g. 6,50 â‚¬)"
    },
    {
      "command": "regex",
      "input": "$PRICE_TEXT",
      "expression": "([\\d,]+)",
      "output": {
        "name": "PRICE_NUM",
        "type": "string",
        "show": false
      },
      "description": "Extracts only the numeric part (e.g. 6,50)"
    },
    {
      "command": "regex",
      "input": "$PRICE_NUM",
      "expression": "^([^,]*)",
      "output": {
        "name": "PRICE_LEFT",
        "type": "string",
        "show": false
      },
      "description": "Gets left part before comma"
    },
    {
      "command": "regex",
      "input": "$PRICE_NUM",
      "expression": "(?<=,)(.*)",
      "output": {
        "name": "PRICE_RIGHT",
        "type": "string",
        "show": false
      },
      "description": "Gets right part after comma"
    },
    {
      "command": "store",
      "input": "$PRICE_LEFT.$PRICE_RIGHT",
      "output": {
        "name": "PRICE",
        "type": "float",
        "show": true
      },
      "description": "Combines with dot for decimal (6.50)"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/grapes/']",
      "output": {
        "name": "GRAPES",
        "type": "string",
        "show": true
      },
      "description": "Field: Type of grape"
    },
    {
      "command": "store_text",
      "locator": "table[class*='wineFacts__wineFacts'] tr[data-testid='wineFactRow']:nth-child(4) td[class*='wineFacts__fact'] a",
      "output": {
        "name": "STYLE",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the wine style from wineFacts table row 4"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-countries/']",
      "output": {
        "name": "COUNTRY",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-regions/']",
      "output": {
        "name": "PLACE",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store",
      "input": "$COUNTRY, $PLACE",
      "output": {
        "name": "REGION",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the region"
    },
    {
      "command": "store_attribute",
      "locator": "picture img",
      "attribute_name": "src",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the image"
    },
    {
      "command": "store",
      "input": "https:$COVER",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Field: Add url param to the cover"
    },
    {
      "command": "store_text",
      "locator": "[class^=wineFacts__wineFacts] tr:last-child [class^=wineFacts__fact] span",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store",
      "input": "$URL",
      "output": {
        "name": "URL_SALE"
      },
      "description": "Field: Saves the url to sale the product"
    }
  ]
}
