{
  "recipe_shortcut": "footballkitarchivecom",
  "list_type": "generic",
  "engine_version": 20,
  "title": "Footballkitarchive.com",
  "description": "Retrieve generic from footballkitarchive.com",
  "urls": [
    "https://footballkitarchive.com",
    "https://www.footballkitarchive.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.footballkitarchive.com/?q=$INPUT",
      "config": {
        "js": true,
        "timeout": 10000,
        "wait_for": ".kit-container"
      },
      "description": "Load search results and wait for kit containers"
    },
    {
      "command": "store_text",
      "locator": ".kit-container:nth-child($i) .kit-teamname",
      "output": {
        "name": "TEAM$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 2,
          "to": 11,
          "step": 1
        }
      },
      "description": "Extract team names using nth-child starting from 2"
    },
    {
      "command": "store_text",
      "locator": ".kit-container:nth-child($i) .kit-season",
      "output": {
        "name": "SEASON$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 2,
          "to": 11,
          "step": 1
        }
      },
      "description": "Extract season info using nth-child starting from 2"
    },
    {
      "command": "store",
      "input": "$TEAM$i - $SEASON$i",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 2,
          "to": 11,
          "step": 1
        }
      },
      "description": "Combine team and season into title"
    },
    {
      "command": "store_attribute",
      "locator": ".kit-container:nth-child($i) a",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 2,
          "to": 11,
          "step": 1
        }
      },
      "description": "Extract absolute URLs directly"
    },
    {
      "command": "store_attribute",
      "locator": ".kit-container:nth-child($i) img",
      "attribute_name": "src",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 2,
          "to": 11,
          "step": 1
        }
      },
      "description": "Extract cover images"
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 5000
      },
      "description": "Load kit detail page"
    },
    {
      "command": "store_text",
      "locator": "h1",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Extract kit title from h1"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:description']",
      "attribute_name": "content",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Extract description from og:description meta"
    },
    {
      "command": "store_attribute",
      "locator": "link[rel='icon']",
      "attribute_name": "href",
      "output": {
        "name": "FAVICON",
        "type": "string",
        "show": true
      },
      "description": "Extract favicon"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:image']",
      "attribute_name": "content",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Extract cover image from og:image meta"
    }
  ]
}