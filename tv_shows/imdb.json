{
  "recipe_shortcut": "imdb_tv_shows",
  "list_type": "tv_shows",
  "engine_version": 5,
  "title": "IMDB TV Shows",
  "description": "A recipe to get a list of tv shows",
  "urls": [
    "https://m.imdb.com/title/",
    "https://m.imdb.com/"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": null,
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 1
      },
      "description": "Load the url of the tv show"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_text",
      "locator": "h1",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Takes the title directly from h1 element"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:title']",
      "attribute_name": "content",
      "output": {
        "name": "OG_TITLE"
      },
      "description": "Takes the og:title to extract the year"
    },
    {
      "command": "regex",
      "input": "$OG_TITLE",
      "expression": "([0-9]{4})",
      "output": {
        "name": "DATE",
        "type": "date",
        "format": "YYYY",
        "show": true
      },
      "description": "Extracts the year using simple regex without lookahead"
    },
    {
      "command": "store_attribute",
      "locator": "meta[name='description']",
      "attribute_name": "content",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description from meta tag"
    },
    {
      "command": "store_text",
      "locator": "a[href*='ratings'] span span",
      "output": {
        "name": "RATING",
        "type": "string"
      },
      "description": "Saves the rating using href-based selector (works in WebView)"
    },
    {
      "command": "regex",
      "input": "$RATING",
      "expression": "([0-9]+[,\\.][0-9]+)",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Extracts numeric rating value"
    },
    {
      "command": "store_text",
      "locator": "a[href*='fullcredits'] span",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Saves the creator of the tv show"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:image']",
      "attribute_name": "content",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Saves the image directly from og:image meta tag"
    }
  ]
}
